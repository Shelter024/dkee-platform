############################################
# Base Application Environment
############################################
NODE_ENV=production
NEXTAUTH_URL=https://your-domain.example
NEXTAUTH_SECRET=change_me_long_random
EXPORT_SECRET=change_me_export_secret
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/dkee?schema=public
REDIS_URL=redis://redis:6379

############################################
# Public App URLs (if behind proxy / Vercel)
############################################
NEXT_PUBLIC_APP_URL=https://your-domain.example
NEXT_PUBLIC_BASE_URL=https://your-domain.example
NEXT_PUBLIC_APP_NAME="DK Executive Engineers"

############################################
# Realtime (Pusher)
############################################
PUSHER_APP_ID=your_pusher_app_id
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=eu
NEXT_PUBLIC_PUSHER_APP_KEY=your_pusher_key
NEXT_PUBLIC_PUSHER_APP_ID=your_pusher_app_id

############################################
# Cloudinary
############################################
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

############################################
# Twilio (SMS)
############################################
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

############################################
# Paystack (Payments)
############################################
PAYSTACK_SECRET_KEY=your_paystack_secret
PAYSTACK_PUBLIC_KEY=your_paystack_public

############################################
# Push Notifications (VAPID Keys)
# Generate with: npx web-push generate-vapid-keys
############################################
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

############################################
# Email (SMTP)
############################################
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@dkexecutive.com"
EMAIL_FROM="noreply@dkexecutive.com"

############################################
# WebAuthn (Biometric Authentication)
############################################
WEBAUTHN_RP_NAME="D.K Executive Engineers"
WEBAUTHN_RP_ID="localhost"
WEBAUTHN_ORIGIN="http://localhost:3000"

############################################
# Cron Job Security (for automated notifications)
############################################
CRON_SECRET=change_me_long_random_cron_secret

############################################
# PDF Generation
############################################
PDF_GENERATION_SERVICE="puppeteer"

############################################
# Optional Feature Flags
############################################
FEATURE_PDF_BRANDING=true
FEATURE_BACKGROUND_EXPORTS=true
FEATURE_REDIS_CACHE=true

############################################
# Encrypted Backup & Offsite Storage
############################################
# Set to a strong passphrase for AES-256 encryption of nightly backups
BACKUP_ENCRYPTION_KEY=change_me_long_random_backup_key
# Provider can be 's3' or 'azure' (blank = only GitHub artifact)
BACKUP_PROVIDER=

# AWS S3 (used when BACKUP_PROVIDER=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_BUCKET=

# Azure Blob (used when BACKUP_PROVIDER=azure)
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_CONTAINER=

############################################
# Sentry Monitoring
############################################
SENTRY_DSN=
SENTRY_ENV=local
SENTRY_RELEASE=
SENTRY_TRACES_SAMPLE_RATE=0.1
